<link rel="stylesheet" type="text/css" href="../assets/stylesheets/application.css">
<link href='http://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>

<p id="notice"><%= notice %></p>

<div class="wrapper">

<img src="../assets/albums.png">

<table class="that">
  <thead class="this">
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Artist</th>
      <th>Album Cover </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="see">
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.genre.name %></td>
        <td><%= album.artist.name %></td>
        <td><%= image_tag(album.cover_url, width: 70) %>
        </td>
        </tr>
        <tr>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<button type="button"><%= link_to 'New Album', new_album_path %></button>

</div>