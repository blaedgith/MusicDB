

<p id="notice"><%= notice %></p>



<center><img src="../assets/albums.png"></center>

<table class="table table-striped table-hover ">


  <thead class="this">
    <tr class="info">
      <th>Title</th>
      <th>Genre</th>
      <th>Artist</th>
      <th>Album Cover </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= image_tag(album.cover_url, width: 70) %>
        </td>
        <td><%= album.title %></td>
        <td><%= album.genre.name %></td>
        <td><%= album.artist.name %></td>
        </tr>
         <tr class="danger">
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<button type="button"><%= link_to 'New Album', new_album_path %></button>

</div>

<%= will_paginate @blogs %>

